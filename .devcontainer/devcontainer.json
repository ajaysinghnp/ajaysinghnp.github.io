{
  "name": "Jekyll DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "ajay"
    }
  },
  "forwardPorts": [4000, 35729],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll Server",
      "onAutoForward": "notify"
    },
    "35729": {
      "label": "Live Reload",
      "onAutoForward": "silent"
    }
  },
  "remoteUser": "ajay",
  "workspaceFolder": "/home/ajay/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ajay/workspace,type=bind",
  "mounts": [
    {
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.ssh",
      "target": "/home/ajay/.ssh",
      "type": "bind"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "sissel.shopify-liquid",
        "ginfuru.ginfuru-vscode-jekyll-syntax",
        "streetsidesoftware.code-spell-checker",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github"
      ],
      "settings": {
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.detectIndentation": true,
        "editor.rulers": [80, 100, 120]
      }
    }
  },
  "postCreateCommand": "sh .devcontainer/post-create.sh",
  "postAttachCommand": {
    "server": "bundle exec jekyll serve --livereload"
  }
}